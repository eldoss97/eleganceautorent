generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Car {
  id           Int      @id @default(autoincrement())
  slug         String   @unique
  title        String
  brand        String
  model        String
  carClass     String   @default("") // "business" | "suv" | "minibus" | "premium" | ""
  year         Int
  pricePerDay  Int
  fuel         String
  transmission String
  seats        Int
  engineVolume String   @default("")   // например: "2.5L"
  consumption  String   @default("")   // например: "7.4 L/100 km"
  price1d      Int      @default(0)
  price2_4     Int      @default(0)
  price5_15    Int      @default(0)
  price16_30   Int      @default(0)
  coverImage   String?
  imagesCsv    String   @default("") // <-- было Json images
  description  String   @default("")
  isFeatured   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

