// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // через pgbouncer — для рантайма (Vercel)
  url       = env("DATABASE_URL")
  // прямое подключение — для миграций
  directUrl = env("DATABASE_POSTGRES_URL_NON_POOLING")
}

model Car {
  id           Int      @id @default(autoincrement())
  slug         String   @unique
  title        String
  brand        String
  model        String
  carClass     String   @default("")
  year         Int
  pricePerDay  Int
  fuel         String
  transmission String
  seats        Int
  engineVolume String   @default("")
  consumption  String   @default("")
  price1d      Int      @default(0)
  price2_4     Int      @default(0)
  price5_15    Int      @default(0)
  price16_30   Int      @default(0)
  coverImage   String?
  imagesCsv    String   @default("")
  description  String   @default("")
  isFeatured   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
